resource "aws_security_group" "rate-website_security_group" {
    name = "Allow SSH, 80, 443"
    description = "Allow SSH, 80, 443 connections"
    vpc_id = aws_vpc.rate-website_vpc.id
    ingress {
        from_port = 22
        to_port = 22
        protocol = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
        from_port = 80
        to_port = 80
        protocol = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
        from_port = 443
        to_port = 443
        protocol = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    egress {
        from_port = 0
        to_port = 0
        protocol = "-1"
        cidr_blocks = ["0.0.0.0/0"]
    }
    tags = {
        Name = "SSH, 80, 443 Security Group"
        DeleteMe = "Yes"
    }
}
